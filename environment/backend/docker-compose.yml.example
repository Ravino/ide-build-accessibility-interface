version: "3.7"


services:
  ide-gateway:
    image: ide-gateway
    build: ./
    container_name: ide-gateway
    restart: unless-stopped
    env_file:
      - ./.env
    ports:
      - 127.0.0.50:8080:3000
    networks:
      - ide


  ide-tarantool:
    image: tarantool/tarantool:2
    container_name: ide-tarantool
    restart: unless-stopped
    ports:
      - 127.0.0.50:3301:3301
    volumes:
      - /databases/ide/tarantool:/var/lib/tarantool
    networks:
      - ide


networks:
  ide:
    driver: bridge
